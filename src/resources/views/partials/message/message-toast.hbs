{{#if success}}
      <script>
          Toastify({
            text: 'Success: {{success}}',
            duration: 3000,
            close: true,
            gravity: 'top',
            position: 'right',
            backgroundColor: '#4fbe87',
        }).showToast();
      </script>
{{/if}}
